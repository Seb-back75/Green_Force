{% extends 'base.html.twig' %}

{% block title %}Paiement index{% endblock %}

{% block body %}
    <h1>Paiement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero_CB</th>
                <th>Mois</th>
                <th>Annee</th>
                <th>Nom_Titulaire</th>
                <th>CVC</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for paiement in paiements %}
            <tr>
                <td>{{ paiement.id }}</td>
                <td>{{ paiement.NumeroCB }}</td>
                <td>{{ paiement.Mois }}</td>
                <td>{{ paiement.Annee }}</td>
                <td>{{ paiement.NomTitulaire }}</td>
                <td>{{ paiement.CVC }}</td>
                <td>
                    <a href="{{ path('paiement_show', {'id': paiement.id}) }}">show</a>
                    <a href="{{ path('paiement_edit', {'id': paiement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('paiement_new') }}">Create new</a>
{% endblock %}
